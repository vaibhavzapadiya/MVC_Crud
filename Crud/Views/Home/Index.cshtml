@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #6f8d7e;
            color: #ffffff;
            padding-top: 20px;
        }

        .text-center {
            margin-top: 50px;
        }

        .display-4 {
            color: #ffffff;
        }

        .section {
            padding: 60px 0;
        }

        .section-title {
            margin-bottom: 30px;
            font-size: 2rem;
            color: #ffffff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .card {
            background-color: #2c2c2c;
            border-color: #444444;
        }

        .card-title {
            color: #ffffff;
        }

        .card-text {
            color: #cccccc;
        }
    </style>
</head>
<body>

    <div class="text-center">
        <h1 class="display-4">Welcome to Our Project</h1>
        <p class="lead">This is a brief introduction to our project. We aim to provide exceptional services and features.</p>
        <a href="/Student/StudentList" class="btn btn-primary">View Students</a>
    </div>

    <div class="container section">
        <h2 class="section-title text-center">Key Features</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Student List</h5>
                        <p class="card-text">Description . This feature show you all student list.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"> Add Student</h5>
                        <p class="card-text">Description. This feature let you add student .</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit and delete Student</h5>
                        <p class="card-text">Description . you can edit and delete student.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
